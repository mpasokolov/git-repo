<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input name="Page[title]"
               type="text"
               class="form-control"
               value="{{ page.title }}">
        <small class="text-danger">{{ page.errors.title }}</small>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input name="Page[description]" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Keywords</label>
        <input name="Page[keywords]" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Content</label>
        <input name="Page[content]" type="text" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>