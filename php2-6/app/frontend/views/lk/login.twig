<div class="row justify-content-md-center">
    <form method="post" class="w-50">
        <div class="form-group">
            <label for="exampleInputEmail1">Login</label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="Login[login]" aria-describedby="emailHelp"
                   placeholder="Enter login" value="{{ data.login }}">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <small class="form-text login-error">{{ data.error.loginAvailable }}</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                   name="Login[password]" value="{{ data.password }}">
            <small class="form-text login-error">{{ data.error.passCheck }}</small>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" name="Login[remember]">
            <label class="form-check-label" for="exampleCheck1">Remember me:</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>